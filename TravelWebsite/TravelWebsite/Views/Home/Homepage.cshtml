@model Model.Model.TravelModel

<style>
    .containerIMG {
        width: 300px;
        height: 200px;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 50% 50%;
    }

    .modal-backdrop {
        z-index: -1;
    }
</style>
<nav class="navbar navbar-expand-md bg-primary navbar-dark sticky-top">
    <!-- Brand -->
    @Html.ActionLink("Website du lịch", "Index", "Home", new { @class = "navbar-brand" })
    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="~/Search/Search?searchName=Internal">Tour trong nước</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Search/Search?searchName=External">Tour ngoài nước</a>
            </li>
            @{
                if (Session["CURRENT_USER"] == null)
                {
                    <li class="nav-item">
                        @Html.ActionLink("Đăng nhập", "Login", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Đăng ký", "Register", "Home", null, new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("Đăng xuất", "Logout", "Home", null, new { @class = "nav-link" })
                    </li>
                }
            }
            <li>
                <a class="nav-link" data-toggle="modal" data-target="#myModal">Tra cứu Tour </a>
            </li>
        </ul>
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        TRA CỨU TOUR
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("checkBookedTour","Business",FormMethod.Post))
                        {
                            <label>Email khách hàng đã đặt tour: </label>
                            <input type="text" name="emailKH" class="form-control"/>
                            <br/>
                            <label>Mã phiếu đặt tour: </label>
                            <input type="text" name="maPDT" class="form-control"/>

                            <input type="submit" class="btn-success form-control" value="Kiểm tra" />
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
<!--banner-->
<div class="my-banner img-fluid">
    <img src="~/Content/img/nhatrang.jpg" alt="">
    <div class="search-bar">
        @using (Html.BeginForm("Search", "Search", FormMethod.Get))
        {
            <div class="search-item">
                <div class="search-item-header">
                    Bạn đi đến đâu ?
                    <input class="search-item-input" type="text" style="width:500px;" name="searchName" required />
                </div>
            </div>
            <div class="search-item">
                <div class="search-item-header">
                    Ngày khởi hành ?
                    <input class="search-item-input" type="date" name="searchDate" />
                </div>
            </div>
            <div class="search-item">
                <div class="search-item-header">
                    Số khách?
                    <input class="search-item-input" type="number" name="searchNumber" />
                </div>
            </div>
            <div class="search-item" style="position: absolute; bottom: 0px;">
                <input type="submit" value="Tìm kiếm" />
                <div class="search-item-bottom">
                    @Html.ActionLink("Tìm kiếm nâng cao", "Search", "Search", new { searchName = " ", searchDate = "", searchNumber = "" }, null)
                </div>
            </div>
        }
    </div>
</div>

<!--jumbotron-->
<div class="jumbotron myjumbotron">
    <h1 class="text-primary">Vì sao chọn Travel..?</h1>
    <div class="jumbotron-input-box">
        <input class="btn btn-outline-primary" type="button" name="" value="Thông tin đảm bảo & uy tín">
        <input class="btn btn-outline-primary" type="button" name="" value="Giá cả cạnh tranh & ưu đãi">
        <input class="btn btn-outline-primary" type="button" name="" value="Thanh toán tiện lợi & an toàn">
        <input class="btn btn-outline-primary" type="button" name="" value="Đội ngũ nhiệt tình & thấu hiểu">
    </div>
</div>

<!--main-->
<div class="container">
    <!--row 1-->
    <div class="row mb-3">
        <div class="col-md-8 d-flex">
            <div class="card my-card flex-fill">
                <div class="row">
                    <div class="col-md-4">
                        @{
                            var pictureInternal = Convert.ToBase64String(Model.imageInternal);
                            var imgsrcInternal = string.Format("data:image/gif;base64,{0}", pictureInternal);
                            <div class="containerIMG">
                                <img class="card-img-top" src=@imgsrcInternal alt="Card image">
                            </div>
                        }
                    </div>
                    <div class="col-md-8 px-3">
                        <div class="card-block px-3">
                            @{
                                string internalTourCode = Session["InternalTourPR"].ToString().Trim();
                                Model.Entity.Tour internalTourPR = null;
                                foreach (var item in Model.tour.danhSach)
                                {
                                    if (item.MaTour == internalTourCode.Trim())
                                    {
                                        internalTourPR = item;
                                    }
                                }
                                string ngayKhoiHanhInternalTourPR = internalTourPR.NgayKhoiHanh.ToShortDateString();

                                <h4 class="card-title"> @internalTourPR.MoTaTour </h4>
                                <p class="card-text">Khởi hành ngày: @ngayKhoiHanhInternalTourPR </p>
                                if (internalTourPR.TinhTrang == true)
                                {
                                    <p class="card-text">Số chỗ: @internalTourPR.SoChoConLai </p>
                                }
                                else
                                {
                                    <p class="card-text">Số chỗ: @internalTourPR.SoChoConLai <span style="color:red">Tour đã hết chỗ!</span></p>
                                }
                                <p class="card-text">Số ngày: @internalTourPR.SoNgay </p>
                            }
                            @using (Html.BeginForm("Detail", "Tour", FormMethod.Get))
                            {
                                <input type="hidden" value=@internalTourPR.MaTour name="tourID" />
                                <input type="submit" class="btn btn-primary" value="Xem thêm" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex">
            <div class="card my-card-orange flex-fill">
                <div class="row">
                    <div class="col-md-12 px-3">
                        <div class="card-block px-3">
                            <h4 class="card-title text-center">Việt Nam tươi đẹp</h4>
                            <p class="card-text">Khám phá ngay những tour du lịch trong nước hấp dẫn</p>
                            <div class="row">
                                <div class="col-md-6 d-flex">
                                    <a href="~/Search/Search?searchName=Internal" class="btn btn-block flex-fill" style="padding: 10% 0;">
                                        Tâm điểm tuần <br><span class="h1">
                                            <<
                                        </span>
                                    </a>
                                </div> <div class="col-md-6 d-flex">
                                    <a href="~/Search/Search?searchName=Internal" class="btn btn-block flex-fill" style="padding: 10% 0;">Có <span class="h5">@Model.internalTourCount</span> tour nội địa <br>chờ bạn tại đây</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

