
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/_Layout.cshtml";
}

@model Model.Model.TourListModel

<nav class="navbar navbar-expand-md bg-primary navbar-dark">
    <!-- Brand -->
    <a class="navbar-brand" href="#">Website du lịch</a>

    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Đăng nhập", "Login", "Home", new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Dương 2</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Dương 3</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    @{
        <table>
            <tr>
                <th>Mã Tour</th>
                <th>Mô tả tour</th>
                <th>Ngày khởi hànhg</th>
            </tr>
            @foreach (var item in Model.danhSach)
            {
                <tr>
                    <td> @item.MaTour </td>
                    <td> @item.MoTaTour</td>
                    <td> @item.NgayKhoiHanh</td>
                </tr>
            }
        </table>

    }
</div>
