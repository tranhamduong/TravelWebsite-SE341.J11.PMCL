                            <td class="tborder"></td>
                            <td class="tborder"></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="right">Tổng tiền:</td>
                            @{ int tongTienSauThue = tongTienTruocThue + @VAT ;}
                            <td style="border-top: 1px solid black" colspan="3" class="tborder">@tongTienSauThue</td>
                            <td>VNĐ</td>
                            <td></td>
