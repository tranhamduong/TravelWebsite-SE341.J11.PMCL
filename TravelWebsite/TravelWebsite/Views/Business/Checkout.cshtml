                        </tr>
                        <tr>
                            <td></td>
                            <td class="tborder" style="border-top: 1px solid black">Số thứ tự</td>
                            <td class="tborder" colspan="5" style="border-top: 1px solid black">Tên dịch vụ</td>
                            <td class="tborder" style="border-top: 1px solid black">Đơn giá</td>
                            <td class="tborder" style="border-top: 1px solid black">Số lượng</td>
                            <td class="tborder" style="border-top: 1px solid black">Thành tiền</td>
                            <td class="tborder" style="border-top: 1px solid black">Ghi chú</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="tborder"><strong>1</strong></td>
                            <td class="tborder" colspan="5">@Model.tour.MoTaTour (Nguời lớn)</td>
                            <td class="tborder">@Model.tongTien</td>
                            <td class="tborder">@Model.pdt.soGheNguoiLon</td>
                            @{ int tt = Int32.Parse(Model.tongTien.ToString()) * Model.pdt.soGheNguoiLon;}
                            <td class="tborder">@tt</td>
                            <td class="tborder">Đã giảm @Model.tour.GiamGia %</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="tborder"><strong>2</strong></td>
                            <td class="tborder" colspan="5">@Model.tour.MoTaTour (Trẻ em)</td>
                            <td class="tborder">@Model.tongTienTreEm</td>
                            <td class="tborder">@Model.pdt.soGheTreEm</td>
                            @{ int ttte = Int32.Parse(Model.tongTienTreEm.ToString()) * Model.pdt.soGheTreEm;}
                            <td class="tborder">@ttte</td>
                            <td class="tborder">Đã giảm @Model.tour.GiamGia %</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="tborder"><strong>3</strong></td>
                            <td class="tborder" colspan="5">Phụ thu Phòng đơn</td>
                            <td class="tborder">500000</td>
                            <td class="tborder">@Model.pdt.soPhongDon</td>
                            @{ int pd = Int32.Parse(Model.pdt.soPhongDon.ToString()) * 500000;}
                            <td class="tborder">@pd</td>
                            <td class="tborder"></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="tborder"><strong>4</strong></td>
                            <td class="tborder" colspan="5">Phí VISA</td>
                            @{
                                int visa = 0;
                                int sl = Model.pdt.soGheNguoiLon + Model.pdt.soGheTreEm;
                                if (Model.tour.isInternal == true)
                                {
                                    <td class="tborder">0</td>
                                    visa = 0;
                                }
                                else
                                {
                                    <td class="tborder">@Model.VISACharge</td>
                                    visa = Int32.Parse(Model.VISACharge.ToString()) * sl;
                                }

                            }
                            <td class="tborder">@sl</td>
                            <td class="tborder">@visa</td>
                            <td class="tborder"></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="tborder"><strong>5</strong></td>
                            <td class="tborder" colspan="5">Bảo hiểm</td>
                            <td class="tborder"><i>Miễn phí</i></td>
                            <td class="tborder">@sl</td>
                            <td class="tborder">0</td>
                            <td class="tborder"></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="tborder"><strong>6</strong></td>
                            <td class="tborder" colspan="5">VAT</td>
                            @{ 
                                int tongTienTruocThue = 0;
                                if (Model.tour.isInternal == true) { tongTienTruocThue = tt + ttte + pd; }
                                else { tongTienTruocThue = tt + ttte + pd + visa; }
                                int VAT = tongTienTruocThue / 100 * 10;
                            }
                            <td class="tborder">@VAT</td>
                            <td class="tborder">1</td>
                            <td class="tborder">@VAT</td>
                            <td class="tborder"></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="tborder"></td>
