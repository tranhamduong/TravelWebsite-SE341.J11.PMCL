                                    <div class="col-md-6 form-group">
                                        <label for="inputHoTen">Họ và tên<span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="inputHoTen" placeholder="Nguyễn Văn A" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="inputEmail">Email<span class="text-danger">*</span></label>
                                        <input type="email" class="form-control" name="inputEmail" placeholder="name@email.com" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="inputMobileNumber">Di động<span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="inputMobileNumber" placeholder="090 9009009" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="inputPhoneNumber">CMND/Số Hộ chiếu: </label>
                                        <input type="text" class="form-control" name="inputCMND" placeholder="XXXX XXXX" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="inputAddress">Địa chỉ</label>
                                        <input type="text" class="form-control" name="inputAddress" placeholder="Võ Văn Tần ..." required>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-3 form-group">
                                                <label for="inputNumberOfOlder">Người lớn</label>
                                                <input type="number" class="form-control" name="inputNumberOfOlder" id="inputNumberOfOlder" placeholder="0" min="0" value="0">
                                            </div>
                                            <div class="col-md-3 form-group">
                                                <label for="inputNumberOfYounger">Trẻ em</label>
                                                <input type="number" class="form-control" name="inputNumberOfYounger" id="inputNumberOfYounger" placeholder="0" min="0" value="0">
                                            </div>
                                            <div class="col-md-3 form-group">
                                                <label for="inputNumberOfSingleRoom">Phòng đơn: </label>
                                                <input type="number" class="form-control" name="inputNumberOfSingleRoom" id="inputNumberOfSingleRoom" placeholder="0" min="0" value="0">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <label for="inputNote">Tên các hành khách (cách nhau bằng dấu phẩy (",")</label>
                                        <textarea type="text" class="form-control" name="customerNameArray"></textarea>
                                    </div>
                                    <input type="hidden" value=@Model.tour.MaTour name="tourID" />
                                    var tongTienGiaTri = Model.tongTien + Model.tongTienTreEm;
                                    <input type="hidden" value=@tongTienGiaTri name="tongTienGiaTri" />
                                    <div class="col-md-12">
                                        <div class="d-flex justify-content-center row">
                                            <button type="submit" class="btn btn-round-long-orange font-weight-bold text-white m-5" name="button">Đặt tour</button>
                                            <button type="button" class="btn btn-round-long-blue font-weight-bold text-white m-5" name="button">Hotline</button>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                using (Html.BeginForm("Confirm", "Business", FormMethod.Post, new { @class = "d-flex flex-wrap", onsubmit = "return myJsFunction()" })) //da dang nhap
                                {
                                    <div class="col-md-6 form-group">
                                        <label for="inputHoTen">Họ và tên<span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="inputHoTen" placeholder="Nguyễn Văn A" value="@Model.khachHang.HoTenKhachHang" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="inputEmail">Email<span class="text-danger">*</span></label>
                                        <input type="email" class="form-control" name="inputEmail" placeholder="name@email.com" value="@Model.khachHang.Email" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="inputMobileNumber">Di động<span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="inputMobileNumber" placeholder="090 9009009" value="@Model.khachHang.SoDienThoaiKH" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="inputPhoneNumber">CMND/Số Hộ chiếu: </label>
                                        <input type="text" class="form-control" name="inputCMND" placeholder="XXXX XXXX" value="@Model.khachHang.SoHoChieuCMND" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="inputAddress">Địa chỉ</label>
                                        <input type="text" class="form-control" name="inputAddress" placeholder="Võ Văn Tần ..." value="@Model.khachHang.DiaChi" required>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-3 form-group">
                                                <label for="inputNumberOfOlder">Người lớn</label>
                                                <input type="number" class="form-control" name="inputNumberOfOlder" id="inputNumberOfOlder" placeholder="0" min="0" value="0">
                                            </div>
                                            <div class="col-md-3 form-group">
                                                <label for="inputNumberOfYounger">Trẻ em</label>
                                                <input type="number" class="form-control" name="inputNumberOfYounger" id="inputNumberOfYounger" placeholder="0" min="0" value="0">
                                            </div>
                                            <div class="col-md-3 form-group">
                                                <label for="inputNumberOfSingleRoom">Phòng đơn: </label>
                                                <input type="number" class="form-control" name="inputNumberOfSingleRoom" id="inputNumberOfSingleRoom" placeholder="0" min="0" value="0">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <label for="inputNote">Tên các hành khách (cách nhau bằng dấu phẩy (",")</label>
                                        <textarea type="text" class="form-control" name="customerNameArray"></textarea>
                                    </div>
                                    <input type="hidden" value=@Model.khachHang.MaKhachHang name="khachHangID" />
                                    <input type="hidden" value=@Model.tour.MaTour name="tourID" />
                                    var tongTienGiaTri = Model.tongTien + Model.tongTienTreEm;
                                    <input type="hidden" value=@tongTienGiaTri name="tongTienGiaTri" />
                                    <div class="col-md-12">
                                        <div class="d-flex justify-content-center row">
                                            <button type="submit" class="btn btn-round-long-orange font-weight-bold text-white m-5" name="button">Đặt tour</button>
                                            <button type="button" class="btn btn-round-long-blue font-weight-bold text-white m-5" name="button">Hotline</button>
                                        </div>
                                    </div>

                                }
                            }
                        }

                    </div>
                </div>
            </div>
            <!--Dat iframe cho nay nay Duong, trong the information-->

        </div>
    </div>
</div>

