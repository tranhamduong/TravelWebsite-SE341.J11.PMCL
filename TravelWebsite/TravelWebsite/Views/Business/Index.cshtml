<script type="text/javascript">
    var soLuongGhe = document.getElementById("soLuongGhe").value;

    function myJsFunction() {
        var soGheNguoiLon = document.getElementById("inputNumberOfOlder").value;
        var soGheTreEm = document.getElementById("inputNumberOfYounger").value;
        var soGhe = parseInt(soGheNguoiLon) + parseInt(soGheTreEm);

        if (soGhe > soLuongGhe) {
            alert("Bạn đã đặt " + soGhe + " chỗ. Tour này chỉ còn " + soLuongGhe + " chỗ. Vui lòng đặt lại hoặc chọn tour khác.");
            return false;
        }

        var soPhongDon = document.getElementById("inputNumberOfSingleRoom").value;
        if (soGhe < soPhongDon) {
            alert("Bạn đã đặt " + soGhe + " chỗ với " + soPhongDon + " phòng đơn. Số phòng đơn nhiều hơn số khách. Bạn vui lòng điều chỉnh phù hợp.")
            return false;
        }
        alert("Đăng ký thành công!");
        return true;
    }
</script>