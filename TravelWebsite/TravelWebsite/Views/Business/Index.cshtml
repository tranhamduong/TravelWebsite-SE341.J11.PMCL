@model Model.Model.ExportModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<!--Phan head cua trang-->
<nav class="navbar navbar-expand-md bg-primary navbar-dark sticky-top">
    <!-- Brand -->
    @Html.ActionLink("Website du lịch", "Index", "Home", null, new { @class = "navbar-brand" })

    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="~/Search/Search?searchName=Internal">Tour trong nước</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Search/Search?searchName=External">Tour ngoài nước</a>
            </li>
            @{
                if (Session["CURRENT_USER"] == null)
                {
                    <li class="nav-item">
                        @Html.ActionLink("Đăng nhập", "Login", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Đăng ký", "Register", "Home", null, new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("Đăng xuất", "Logout", "Home", null, new { @class = "nav-link" })
                    </li>
                }
            }
        </ul>
    </div>
</nav>
<input type="hidden" id="soLuongGhe" value=@Model.tour.SoChoConLai />
<!-- Bat dau trang -->
<div class="container">
    <div class="row mt-3">
        <div class="col-md-12">
            <img class="img-fluid" src="~/Content/img/process.png" alt="process">
        </div>

        <div class="col-md-12">
            <div class="border-round-bold-primary p-1 d-flex justify-content-between">
                <h3 class="text-uppercase text-primary">@Model.tour.MoTaTour</h3>
                <button type="button" class="btn btn-round-long-orange font-weight-bold text-white" name="button">Số chỗ: @Model.tour.SoChoConLai</button>
            </div>
        </div>

        <div class="col-md-12">
            <div class="p-1 d-flex justify-content-end">
                <button type="button" class="btn btn-round-long-blue font-weight-bold text-white" name="button">Hotline</button>
            </div>
        </div>

        <div class="col-md-12 mt-2 mb-2">
            <!--Dat iframe cho nay nay Duong, trong the information-->
            <div class="p-1 information">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td>Mã tour:</td>
                            <td colspan="2">@Model.tour.MaTour</td>
                        </tr>
                        <tr>
                            <td>Ngày khởi hành:</td>
                            <td>@Model.tour.NgayKhoiHanh.ToShortDateString()</td>
                            <td><a class="no-underline text-orange" href="#"><span><i class="fas fa-calendar-alt"></i></span> Ngày khác</a></td>
                        </tr>
                        <tr>
                            <td>Nơi khởi hành:</td>
                            <td>@Model.tour.NoiKhoiHanh</td>
                            <td>Thời gian: <span>@Model.tour.SoNgay ngày</span></td>
                        </tr>
                    </tbody>
                </table>

                <div class="jumbotron jumbotron-fluid jumbotron-blue">
                    <div class="container">
                        <h4>Bảng Báo Giá</h4>
                        <table class="table table-bordered table-hover table-blue-border">
                            <tbody>
                                <tr>
                                    <td><h4>Chi phí</h4></td>
                                    <td>Giá người lớn</td>
                                    <td>Giá trẻ em</td>
                                </tr>
                                <tr>
                                    <td>Giá tour cơ bản</td>
                                    <td class="text-right">@Model.tour.GiaTien<span> đ</span></td>
                                    <td class="text-right">@Model.tour.GiaTienTreEm<span> đ</span></td>
                                </tr>
                                <tr>
                                    <td>Bảo hiểm</td>
                                    <td class="text-right"><span><i> Miễn phí, trị giá 10 000 000 đ</i></span></td>
                                    <td class="text-right"><span><i> Miễn phí, trị giá 10 000 000 đ</i></span></td>
                                </tr>
                                <tr>
                                    <td>Phụ thu Visa</td>
                                    @{
                                        if (Model.tour.isInternal == true)
                                        {
                                            <td class="text-right">0<span> đ</span></td>
                                            <td class="text-right">0<span> đ</span></td>
                                        }
                                        else
                                        {
                                            <td class="text-right">@Model.VISACharge<span> đ</span></td>
                                            <td class="text-right">@Model.VISACharge<span> đ</span></td>
                                        }
                                    }
                                </tr>
                                <tr>
                                    <td>Phụ thu khác(*)</td>
                                    <td class="text-center" colspan="2"><span><i>Phụ thu phòng đơn: 500 000 đ.</i></span></td>
                                </tr>
                                <tr>
                                    <td>Thuế VAT: </td>
                                    <td colspan="2" class="text-center"><strong>10% </strong>hóa đơn</td>
                                </tr>
                                <tr>
                                    <td>Giảm Giá </td>
                                    <td colspan="2" class="text-center"> Tour này đang được giảm giá <strong>@Model.tour.GiamGia </strong>% vào giá tour gốc</td>
                                </tr>
                                <tr>
                                    <td class="text-right">Tổng cộng</td>
                                    <td class="text-right">@Model.tongTien<span> đ</span></td>
                                    <td class="text-right">@Model.tongTienTreEm<span> đ</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="row d-flex justify-content-center">
                    <h3 class="text-warning text-uppercase mb-4">Thông tin liên lạc</h3>
                    <div class="col-md-12">
                        @{if (Session["CURRENT_USER"] == null) // chua dang nhap
                            {
                                using (Html.BeginForm("Confirm", "Business", FormMethod.Post, new { @class = "d-flex flex-wrap", @onsubmit = "return myJsFunction()" }))
