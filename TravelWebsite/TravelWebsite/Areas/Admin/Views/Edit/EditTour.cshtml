@model Model.Model.EditTourModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditTour</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>


    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
    @using (Html.BeginForm("EditTourDone", "Edit", FormMethod.Post, new { @id = "form" }))
    {
    <div class="form-horizontal">
        <h4>Tour: @Model.tour.MaTour</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.tour.MaTour)
        @Html.HiddenFor(model => model.tour.MaChiTietTour)

        <div class="form-group">
            @Html.LabelFor(model => model.tour.MoTaTour, htmlAttributes: new { @class = "control-label col-md-2 form-control" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tour.MoTaTour, new { htmlAttributes = new { @class = "form-control", @value = Model.tour.MoTaTour, @required = "true" } })
                @Html.ValidationMessageFor(model => model.tour.MoTaTour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.SoNgay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tour.SoNgay, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.tour.SoNgay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.SoChoConLai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tour.SoChoConLai, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.tour.SoChoConLai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.NgayKhoiHanh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="container">
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group date' id='datetimepickerEdit1'>
                                    <input type='text' class="form-control" name="thoigiandi" required />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-time"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <script type="text/javascript">
                            $(function () {
                                $('#datetimepickerEdit1').datetimepicker({
                                    format: 'L'
                                });
                            });
                        </script>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.tour.NgayKhoiHanh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.NgayTroVe, htmlAttributes: new { @class = "control-label col-md-2", @required = "true" })
            <div class="col-md-10">
                <div class="container">
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group date' id='datetimepickerEdit2'>
                                    <input type='text' class="form-control" name="thoigianden" required />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-time"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <script type="text/javascript">
                            $(function () {
                                $('#datetimepickerEdit2').datetimepicker({
                                    format: 'L'
                                });
                            });
                        </script>
                    </div>
                </div>                    @Html.ValidationMessageFor(model => model.tour.NgayTroVe, "", new { @class = "text-danger", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.GiaTien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tour.GiaTien, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.tour.GiaTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.GiaTienTreEm, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tour.GiaTienTreEm, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.tour.GiaTienTreEm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.NoiKhoiHanh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tour.NoiKhoiHanh, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.tour.NoiKhoiHanh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.GiamGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tour.GiamGia, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.tour.GiamGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.MaHuongDanVien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.tour.MaHuongDanVien, new SelectList(Model.dsHuongDanVien), "Chọn Hướng dẫn viên", new { @class = "form-control", @name = "hdv", @required = "true" })
                @Html.ValidationMessageFor(model => model.tour.MaHuongDanVien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.MaDiaDanh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.tour.MaDiaDanh, new SelectList(Model.dsDiaDanh), "Chọn địa danh", new { @class = "form-control", @name = "dd", @required = "true" })
                @Html.ValidationMessageFor(model => model.tour.MaDiaDanh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tour.PhuongTien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.tour.PhuongTien, new SelectList(Model.dsPhuongTien), "Chọn phương tiện", new { @class = "form-control", @name = "ptn", @required = "true" })
                @Html.ValidationMessageFor(model => model.tour.PhuongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Ngày giờ tập trung: </label>
                <div class="container">
                    <div class="row">
                        <div class='col-sm-6'>
                            <input type='text' class="form-control" id='datetimepickerEdit3' name="ngaygiotaptrung" required />
                        </div>

                    </div>
                </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="col-md-2 control-label" >Nơi tập trung</label>
                <input type="text" name="noitaptrung" class="form-control col-md-10" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="col-md-2 control-label">Có bảo hiểm: </label>
                <select class="form-control col-md-10" name="baohiem" required>
                    <option>Có</option>
                    <option>Không</option>
                </select>
            </div>
        </div>


        <div class="form-group">
            <label class="col-md-2 control-label">Quà tặng: </label>
            <div class="col-md-10">
                Nước suối: @Html.CheckBox("nuocsuoi")@*<input type="checkbox" name="nuocsuoi" data-val="true" value="true"/>*@
                Nón: @Html.CheckBox("non") @*<input type="checkbox" name="non" data-val="true" value="true" />*@
                Áo thun: @Html.CheckBox("aothun") @*<input type="checkbox" name="aothun" data-val="true" value="true" />*@
                Dù: @Html.CheckBox("du") @*<input type="checkbox" name="du" data-val="true" value="true" />*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="col-md-2 control-label">Lịch trình: </label>
                <textarea rows="5" name="lichtrinh" class="form-control col-md-10"></textarea>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" onclick="return saveForm();" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "InsertData", "Insert")
    </div>
    <script type="text/javascript">
            $(function () {
                $('#datetimepickerEdit1').datetimepicker({
                    format: 'DD/MM/YYYY'
                });

                $("#datetimepickerEdit2").datetimepicker({
                    format: 'DD/MM/YYYY'
                });
            });
        </script>

    <script type="text/javascript">
        $(function () {
        });
        //$("#datetimepickerEdit1").datetimepicker();
        //$("#datetimepickerEdit2").datetimepicker();
        $("#datetimepickerEdit3").datetimepicker();
        //$(function () {
        //    $('#datetimepickerEdit1').datetimepicker({
        //        format: 'DD/MM/YYYY'
        //    });
        //});
        //$("#datetimepickerEdit2").datetimepicker({
        //    format: 'DD/MM/YYYY'
        //});
    </script>

    <script type="text/javascript">
        function saveForm() {
            var form = document.getElementById("form");
            form.submit();
            alert("Changes save successfully!");
            return false;
        }
    </script>

</body>
</html>
